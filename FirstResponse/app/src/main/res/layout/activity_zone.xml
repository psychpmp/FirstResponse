<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:padding="0dp"
    android:background="#FFFFFF">

    <androidx.appcompat.widget.Toolbar
        android:id="@+id/customToolbar"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@android:color/transparent"
        android:elevation="4dp"
        android:paddingStart="16dp"
        android:paddingEnd="16dp"
        android:contentInsetStartWithNavigation="0dp"
        android:layout_marginTop="8dp"
        app:navigationIcon="@drawable/back"
        app:titleTextAppearance="@style/CustomToolbarTitle"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHeight_default="wrap"/>

    <!-- Text, Image, and Information Section -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:gravity="center_vertical"
        android:padding="16dp"
        android:layout_marginTop="24dp">

        <!-- Information Text Section -->
        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:orientation="vertical"
            android:padding="8dp">

            <!-- Address -->
            <TextView
                android:id="@+id/address_ligao_city_hospital"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Address:"
                android:textStyle="bold"
                android:textColor="#000000"
                android:fontFamily="@font/montserrat_bold" />

            <TextView
                android:id="@+id/address_details_ligao_city_hospital"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="456 Main St, Ligao City, Albay"
                android:textColor="#000000"
                android:fontFamily="@font/opensans"
                android:layout_marginBottom="8dp" />

            <!-- Date of Establishment -->
            <TextView
                android:id="@+id/established_ligao_city_hospital"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Date of Establishment:"
                android:textStyle="bold"
                android:layout_marginTop="8dp"
                android:textColor="#000000"
                android:fontFamily="@font/montserrat_bold" />

            <TextView
                android:id="@+id/established_details_ligao_city_hospital"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="June 12, 1985"
                android:textColor="#000000"
                android:fontFamily="@font/opensans"
                android:layout_marginBottom="8dp" />

            <!-- Head Facilitator -->
            <TextView
                android:id="@+id/head_facilitator_ligao_city_hospital"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Head Facilitator:"
                android:textStyle="bold"
                android:layout_marginTop="8dp"
                android:textColor="#000000"
                android:fontFamily="@font/montserrat_bold" />

            <TextView
                android:id="@+id/head_facilitator_details_ligao_city_hospital"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Dr. John Smith"
                android:textColor="#000000"
                android:fontFamily="@font/opensans" />
        </LinearLayout>

        <!-- Logo Image -->
        <ImageView
            android:id="@+id/logo_ligao_city_hospital"
            android:layout_width="150dp"
            android:layout_height="150dp"
            android:layout_marginStart="16dp"
            android:contentDescription="Ligao City Hospital Logo"
            android:src="@drawable/zone" />
    </LinearLayout>

    <!-- Content Section (After Image and Information) -->
    <TextView
        android:id="@+id/content_ligao_city_hospital"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="@string/ligao_city_hospital_content"
        android:layout_marginTop="16dp"
        android:textColor="#000000"
        android:padding="16dp"
        android:fontFamily="@font/opensans" />

    <!-- Buttons Section -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_marginTop="24dp"
        android:gravity="center">

        <Button
            android:id="@+id/button_get_directions_ligao_city_hospital"
            android:layout_width="150dp"
            android:layout_height="50dp"
            android:text="Get Directions"
            android:textSize="10sp"
            android:layout_marginEnd="16dp"
            android:background="@drawable/white_button_background"
            android:textColor="#FFFFFF"
            android:fontFamily="@font/montserrat_bold"
            android:drawableLeft="@drawable/directions"
            android:drawablePadding="16dp"
            android:clickable="true"
            android:focusable="true" />

        <Button
            android:id="@+id/button_contact_ligao_city_hospital"
            android:layout_width="150dp"
            android:layout_height="50dp"
            android:textSize="10sp"
            android:text="Contact Them"
            android:background="@drawable/white_button_background"
            android:textColor="#FFFFFF"
            android:fontFamily="@font/montserrat_bold"
            android:drawableLeft="@drawable/phone_call"
            android:drawablePadding="16dp"
            android:clickable="true"
            android:focusable="true" />
    </LinearLayout>

    <!-- Distance Information -->
    <TextView
        android:id="@+id/distance_text_view_ligao_city_hospital"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Distance will be shown here"
        android:layout_marginTop="16dp"
        android:layout_gravity="center_horizontal"
        android:textColor="#000000"
        android:fontFamily="@font/opensans" />
</LinearLayout>
